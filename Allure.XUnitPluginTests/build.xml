<Project
        DefaultTargets="Test"
        xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <UsingTask
            AssemblyFile="./../packages/xunit.runner.msbuild/2.3.1/build/net452/xunit.runner.msbuild.net452.dll"
            TaskName="Xunit.Runner.MSBuild.xunit" />

    <ItemGroup>
        <TestAssemblies Include="**/bin/Debug/**/*Tests.dll" />
    </ItemGroup>

    <Target Name="Test">
        <xunit Assemblies="@(TestAssemblies)" Reporter="allure" />
    </Target>

</Project>